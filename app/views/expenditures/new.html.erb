<h1>New expenditure</h1>

<%= form_with(model: @expenditure, class: "contents") do |form| %>
  <% if @expenditure.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@expenditure.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
        <% @expenditure.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5 group-option d-grp1">
    <%= form.label :name %>
    <%= form.text_field :name, required: true %>
  </div>

  <div class="my-5 group-option d-grp2">
    <%= form.label :amount %>
    <%= form.number_field :amount, required: true %>
  </div>

  <div class="my-5 group-option d-grp3">
    <%= form.label :group_id %>
    <div class="mt-1 rounded-md shadow-sm">
      <%=form.collection_select :group_id, Group.order(:name), :id, :name  %>
    </div>
  </div>


  <div class="inline group-option-btn" >
    <%= form.submit "Add new Category" %>
  </div>
<% end %>


<br>

<div class="arrow-back">
  <%= link_to 'back', :back %>
</div>
